.g
  .g-b.g-b--m--2of3

    %p.label.mbxs= label_text
    .form
      = simple_form_for @article do |f|

        .form-item
          = f.text_field :topic, placeholder: 'Enter an Article Topic',
            class: 'form-input form-input--clear tfh tsl ts--m--xl'

        .form-item
          = f.input_field :title, placeholder: 'Enter an Article Title',
            class: 'form-input form-input--clear tfh tsl ts--m--xl'

        .form-item
          = f.input_field :content, rows: 12, class: 'form-input form-textarea'

        .form-item
          = f.input :tag_tokens, label: 'Tags',
            label_html: { class: 'form-label label' },
            input_html: { data: {load: @tags} }

        - if @article.author.blank?
          .form-item
            = f.input :author_id, as: :hidden, input_html: { value: current_user.try(:id) }

        .form-item
          = f.input :editor_id, as: :hidden, input_html: { value: current_user.try(:id) }

        = f.button :submit, class: 'btn btn--a btn--l'

  .g-b.g-b--m--1of3

    .card.card--b.has-card-section
      %h2.tac.mbs Markdown

      .card-section.pbs.pts
        .form.mbf
          .js-accordion
            .split.js-accordion-btn
              .split-item
                .split-cell
                  %span.form-label.label Headings
                .split-cell
                  = render partial: 'shared/icon', locals: { icon: 'caretDown', middle: true, klass: 'tcs tss' }
            .js-accordion-content
              %input.form-input.mbs.js-input-select{ type: 'text', readonly: true, value: '## This is an h2' }
              %input.form-input.mbs.js-input-select{ type: 'text', readonly: true, value: '### This is an h3' }
              %input.form-input.mbs.js-input-select{ type: 'text', readonly: true, value: '#### This is an h4' }
              %input.form-input.mbs.js-input-select{ type: 'text', readonly: true, value: '##### This is an h5' }
              %input.form-input.mbf.js-input-select{ type: 'text', readonly: true, value: '###### This is an h6' }

      .card-section.pbs.pts
        .form.mbf
          .js-accordion
            .split.js-accordion-btn
              .split-item
                .split-cell
                  %span.form-label.label Links
                .split-cell
                  = render partial: 'shared/icon', locals: { icon: 'caretDown', middle: true, klass: 'tcs tss' }
            .js-accordion-content
              %input.form-input.mbf.js-input-select{ type: 'text', readonly: true, value: '[This is a link](http://example.com)' }

      .card-section.pbs.pts
        .form.mbf
          .js-accordion
            .split.js-accordion-btn
              .split-item
                .split-cell
                  %span.form-label.label Lists
                .split-cell
                  = render partial: 'shared/icon', locals: { icon: 'caretDown', middle: true, klass: 'tcs tss' }
            .js-accordion-content
              %textarea.form-input.form-textarea.form-textarea--pre.mbs.js-input-select{ readonly: true, rows: 3 }
                \- This is the first item in an unordered list
                \- This is the second item in an unordered list
                \- This is the third item in an unordered list
              %textarea.form-input.form-textarea.form-textarea--pre.mbf.js-input-select{ readonly: true, rows: 3 }
                \1. This is the first item in an ordered list
                \2. This is the second item in an ordered list
                \3. This is the third item in an ordered list

      .card-section.pbs.pts
        .form.mbf
          .js-accordion
            .split.js-accordion-btn
              .split-item
                .split-cell
                  %span.form-label.label Code
                .split-cell
                  = render partial: 'shared/icon', locals: { icon: 'caretDown', middle: true, klass: 'tcs tss' }
