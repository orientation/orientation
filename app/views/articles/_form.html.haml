              %input.form-input.mbs.js-input-select{ type: 'text', readonly: true, value: '`This is inline code`' }
              %textarea.form-input.form-textarea.form-textarea--pre.js-input-select{ readonly: true, rows: 3 }
                \```
                This is a code block
                \```

      .card-section.pbs.pts
        .form.mbf
          .js-accordion
            .split.js-accordion-btn
              .split-item
                .split-cell
                  %span.form-label.label Strong
                .split-cell
                  = render partial: 'shared/icon', locals: { icon: 'caretDown', middle: true, klass: 'tcs tss' }
            .js-accordion-content
              %input.form-input.mbf.js-input-select{ type: 'text', readonly: true, value: '**This text is strong**' }

      .card-section.pbs.pts
        .form.mbf
          .js-accordion
            .split.js-accordion-btn
              .split-item
                .split-cell
                  %span.form-label.label Emphasis
