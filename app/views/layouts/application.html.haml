!!!
%html
  %head
    %title Orientation
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body{ class: body_class }
    %nav
      %ul
        %li.logo
          = link_to image_tag("brackets_banner_logo-black.svg", height: 40), root_url
        %li= link_to "Tags", tags_url
        %li= link_to "Authors", authors_url
        %li.new-article= link_to "New Article", new_article_url
        - if current_user
          %li.auth
            = current_user.image_link
            = current_user.link_tag
            | #{link_to "Log Out", logout_path, title: current_user.email}
        - else
          %li.auth= link_to "Log In", login_path, data: { no_turbolink: true }
    .container
      - if flash[:error]
        .error= flash[:error]
      - if flash[:notice]
        .notice= flash[:notice]
      = yield
